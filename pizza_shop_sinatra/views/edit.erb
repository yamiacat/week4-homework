<form action="/pizzas/<%= @pizza.id %>" method="POST">

  <label for="first-name-field">First Name:</label>
  <input id="first-name-field" name="first_name" type="text" value="<%= @pizza.first_name %>"/>
  <label for="last-name-field">Last Name:</label>
  <input type="text" name="last_name" id="last-name-field" value="<%= @pizza.last_name %>">
  <label for="pizza-select">Select your pizza:</label>
  <select id="pizza-select" name="topping">
    <% all_toppings = ["Margherita", "Veneziana", "Veggie", "Italian Sausage", "Pepporoni"] %>
    <% all_toppings.each do |topping| %>
      <option <%= "selected" if @pizza.topping == topping %> value="<%= topping %>">
        <%= topping %>
      </option>
    <% end %>
  </select>

  <label for="quantity-field">Quantity</label>
  <input type="number" name="quantity" id="quantity-field" value="<%= @pizza.quantity %>">

  <input type="submit" value="Edit Pizza Order">

</form>
